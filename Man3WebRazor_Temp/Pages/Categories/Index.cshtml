@page
@model Man3WebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4" pb="3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>

        </div>
    </div>
<h1>Test Bro</h1>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>Category Id</th>

    </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
             <tr>
                 <td>
                        @obj.Name
                 </td>
                 <td>
                        @obj.DisplayOrder
                 </td>
                 <td>
                        @obj.CategoryId
                 </td>
                 <td>
                     <div class="w-75 btn-group" role="group">
                         <a asp-page="/Categories/Edit" asp-route-CategoryId="@obj.CategoryId" class= "btn btn-primary mx-2">
                             <i class="bi bi-pencil-square">Edit</i>
                         </a>
                     </div>
                 </td>
                 <td>
                     <div class="w-75 btn-group" role="group">
                         <a asp-page="/Categories/Delete" asp-route-CategoryId="@obj.CategoryId" class= "btn btn-danger mx-2">
                            <i class="bi bi-trash">Delete</i>
                         </a>
                     </div>
                 </td>
             </tr>               
            }
    </tbody>
</table>
</div>



